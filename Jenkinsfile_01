#!groovy

pipeline {
    agent any

    tools {
        maven "maven3" // name of the maven configured in the Global Tools Configuration page
    }

    stages {
        stage("Checking Java") {
            steps {
                sh '''
                env | grep -e PATH -e JAVA_HOME
                which java
                java -version
                '''
            }
        }
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
            }
        }
        stage("Test") {
            steps {
                sh "mvn test"                
            }
        }
    }

    post {
        always {
            mail to: "estudantecomp@gmail.com@gmail.com",
            subject: "Test Email from jenkins",
            body: "Test"                       
        }
    }
}
