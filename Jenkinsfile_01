#!groovy

pipeline {
    agent any

    tools {
        maven "maven3" // name of the maven configured in the Global Tools Configuration page
    }

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
            }
        }
        stage("Test") {
            steps {
                sh "mvn test"                
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}